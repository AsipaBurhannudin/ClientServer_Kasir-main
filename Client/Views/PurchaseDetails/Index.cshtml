@model IEnumerable<API.Models.PurchaseDetails>

@{
    ViewData["Title"] = "Index";
}

<h1>History</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.purchase_code)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.item_code)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.purchase_amount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.purchase_price)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.purchase_code)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.item_code)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.purchase_amount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.purchase_price)
            </td>
        </tr>
}
    </tbody>
</table>
