﻿@{
    ViewData["Title"] = "Item Management";
    Layout = "_AdminLayout";
}

<h1>Item Management</h1>

<table class="table table-bordered table-hover" id="tblItem">
    <thead class="thead-dark">
        <tr>
            <th class="text-center">No</th>
            <th class="text-center">Item Code</th>
            <th class="text-center">Item Name</th>
            <th class="text-center">Stock</th>
            <th class="text-center">Selling Price</th>
            <th class="text-center">Purchase Price</th>
            <th class="text-center">Action</th>
        </tr>
    </thead>
    <tbody id="tbodyItem">
    </tbody>
</table>

<!-- Modal -->
<div class="modal fade" id="modalItem" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalTitle">Modal title</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-4">
                        <img id="pokeImage" src="" alt="Pokemon Image" style="width: 150px; height: auto;">
                    </div>
                    <!-- Add other employee details here -->
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>

@section ItemData{
    <script src="~/js/ItemData.js"></script>
}